{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block javascripts %}
    {# ne pas overrider le script parent #}
    {{ parent() }}
    <script src="{{ asset('js/vote.js') }}"></script>
    <script>
        // Script local pour incrémenter un nombre
        document.addEventListener('DOMContentLoaded', function() {
            var localButton = document.getElementById('localButton');
            var incrementedNumber = document.getElementById('incrementedNumber');
            var count = 0;

            if (localButton) {
                localButton.addEventListener('click', function() {
                    count++;
                    incrementedNumber.textContent = count;
                });
            }
        });
    </script>
{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h2>
            Article numéro {{ number }}
        </h2>

        <h2>Générer</h2>
        <button id="globalButton">Générer un nombre aléatoire</button>
        <p id="globalNumberShow"></p>

        <h2>Incrementer</h2>
        <button id="localButton">Incrémenter le nombre</button>
        <p id="incrementedNumber">0</p>

        
    </div>

{% endblock %}
